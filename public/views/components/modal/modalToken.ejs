<div id="modalCipa" class="custom-modal">
  <div class="custom-modal-content">
    <div class="position-relative">
      <span class="position-absolute end-0 close" onclick="toggleModal()">&times;</span>
    </div>
    <div class="container text-center">
      <h3> Insira o token para continuar </h3>
      <div class="d-flex justify-content-center">
        <input id="token" class="form-control w-25 text-center" name="token" type="password" minlength="6" maxlength="6"
          required />
      </div>

      <div class="mt-3">
        <% if (locals.message) { %>
          <p class="text-danger">
            <%= message.error %>
          </p>
          <% } %>
            <button class="btn btn-success" type="submit"> Confirmar </button>
            <button class="btn btn-danger" onclick="toggleModal()"> Voltar </button>
      </div>
    </div>
  </div>
</div>