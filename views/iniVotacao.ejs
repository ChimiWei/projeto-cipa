<!DOCTYPE html>
<html>
<head>
   <%- include('partials/head', {title: 'Votação'}); %>
   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
</head>
<body>
    <%- include('partials/header'); %>
    <section class="container bg-white rounded p-2 mt-2"> 
        <div class="container">
            <div class="row">
                <div class="col-sm text-center ">
                    <form action="/iniciar_votacao" method="GET" >
                        <label for="" class="fs-3"> Para iniciar a votação, insira a sua matrícula: </label>
                        <input name="chapa" type="text" value="<%= locals.chapa %>" placeholder="Matrícula" class="input-style my-3" minlength="5" maxlength="5" required />
                        <button  type="submit" class="input-style btn-success rounded submit"> Iniciar </button>
                    </form>
                </div>
            </div>
            <% if (!locals.func && locals.chapa) { %>
                <div class="row mt-2 text-center">
                    <h1 class="text-shadow"> Funcionário não encontrado </h1>
                </div>

            <% } %> 
            <% if (locals.func) { %>
                <div class="row mt-2">
                    <div class="col-2">
                        <img src=<%= func.foto %> class="img-thumbnail"/>
                    </div>
                    <div class="col">
                        <ul class="list-group">
                          <li class="list-item">Funcionario: <%= func.CHAPA %> <%= func.NOME  %> </li>
                          <li class="list-item">Função: <%= func.FUNCAO %> </li>
                          <li class="list-item">Setor: <%= func.SECAO %> </li>
                        </ul>
                    </div>
                </div>
                <div class="col text-center">
                    <% if (locals.voto) { %>
                        <h4 class="text-danger text-shadow"> Funcionário já votou! </h4>
                    <% } else { %>
                        <form action="/iniciar_votacao" method="POST" >
                            <input hidden name="chapa" type="text" value="<%= chapa %>" placeholder="Matrícula" class="input-style my-3" minlength="5" maxlength="5" required />
                            <button  type="submit" class="input-style btn-success rounded submit"> Iniciar </button>
                        </form> 
                        <% } %> 
                </div>
                <% } %> 
                <% console.log(locals) %> 
                <% if(locals.message.nome) { %>
                    <div class="row mt-2 text-center">
                        <h4 class="text-shadow"> Voto de <text class="text-capitalize fw-bold"><%= message.nome[0].toLowerCase() %></text> realizado com sucesso </h4>
                    </div>
                <% } %>
        </div>
    </section>
    <%- include('partials/footer'); %>
    <script src='js/votacao.js'></script>


</body>
</html>