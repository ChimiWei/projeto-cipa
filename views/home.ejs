<!DOCTYPE html>
<html>
<head>
   <%- include('partials/head', {title: 'Cadastrar Candidato'}); %>
</head>
<body>
    <%- include('partials/header'); %>  
    <section> 
    <div class="container bg-white rounded p-2 mt-2">
        <div class="row">
            <div class="col text-center">
                <h3> Cipa <%= gestao %> </h3>
            </div>
        </div>
        <div>
            <div class="row justify-content-center">
                <div class="col-sm-6 ">
                    <form action="/cipaconfig" method="POST">
                        <select class="form-select text-center" aria-label="Selecione a filial">
                            <option disabled selected>Selecione a filial</option>
                            <% filiais.forEach(filial => { %>
                            <option value="<%= filial.codfilial %>"><%= filial.nome %></option>
                            <% }) %>
                          </select>    
                    </form>
                </div>
                
            </div>
            <div class="d-flex justify-content-center pt-2">
                <button  type="submit" class="input-style btn-color rounded submit"> Continuar </button>
            </div>
        </div>
    </div>
    </section>
    <%- include('partials/footer'); %>
</body>
</html>