<!DOCTYPE html>
<html>

<head>
    <%- include('partials/head', {title: 'admin' }); %>
</head>



<body class="bg-dark">
    <section class=" section-full-screen ">
        <%- include('partials/adminPainel') %>
        <div class="container p-3">
          <div class="row text-center">
            <h3 class="text-white"> Usuários </h3>
          </div>
            <div class="row p-3">
                <table class="table table-sm table-dark shadow table-bordered">
                    <thead>
                      <tr>
                        <th scope="col">Login</th>
                        <th scope="col">Data Criação</th>
                        <th scope="col">Gestor da filial</th>
                        <th scope="col">Verificado</th>
                        <th class="text-center" scope="col" colspan="3">Ações</th>

                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach(user => { %>
                        <tr>
                          <td><%= user.login %></td>
                          <td><%= user.data_criacao.toLocaleDateString("pt-br", { day: '2-digit' , month: '2-digit' , year: 'numeric'
                            , hour: 'numeric' , minute: 'numeric'}) %></td>
                          <td><%= user.filial %></td>
                          <td><%= user.verificado == 1 ? 'Sim' : 'Não' %></td>
                        <% if(user.verificado == 0) { %>
                          <form action="/admin/verify/<%= user.id %>?_method=PUT" method="POST">
                          <td class="text-center"><button type="submit" class="btn-no-style"><i class="fa-solid fa-check light-green"></i></button></td>
                          </form>
                          <% } else { %>
                          <td class="text-center"><i class="fa-solid fa-check dark-green"></i></td>
                        <% } %>
                          <td class="text-center"><i class="fa-solid fa-pen-to-square "></i></i></td>
                          <td class="text-center"><i class="fa-solid fa-circle-xmark text-danger"></i></td>
                        <% }) %>
            </div>
        </div>
    </section>
    
    <script src="https://kit.fontawesome.com/49ddb56ecf.js" crossorigin="anonymous"></script>
</body>