<!DOCTYPE html>
<html>

<head>
    <%- include('partials/head', {title: 'Home' }); %>
</head>

<body class="bg-image">
    <%- include('partials/header'); %>
        <section>
            <div class="container bg-white rounded p-2 mt-2">
                <div class="row">
                    <div class="col text-center">
                        <h3> Cipa <%= gestao %>
                        </h3>
                    </div>
                </div>
                <% if(cipas.length > 0) { %>
                <% cipas.forEach(cipa=> { %>
                    <%- include('components/inscricao/viewCipa', {cipa: cipa}); %>
                        <% }) %>
                        <% } else { %>
                            <div>
                                <div class="d-flex justify-content-center pt-2">
                                    <a href="/cipaconfig" class="btn btn-color rounded submit"> Criar Cipa </a>
                                </div>
                            </div>
                        <% } %>
            </div>
        </section>
        <%- include('partials/footer'); %>
</body>

</html>