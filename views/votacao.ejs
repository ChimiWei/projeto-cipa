<!DOCTYPE html>
<html>
<head>
   <%- include('partials/head', {title: 'Votação'}); %>
   <!-- datepicker  -->
   <link rel='stylesheet' type='text/css' media='screen' href='css/bootstrap-datepicker.css'>
   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
   <script src='js/bootstrap-datepicker.min.js'></script>
</head>
<body>
    <%- include('partials/header'); %>
    <section class="container bg-white rounded p-2 mt-2"> 
        <div class="row">
            <div class="col text-center">
                <h3> Candidatos </h3>
            </div>
        </div>
        <div>
            <% if (locals.candidatos) { %>
                <% candidatos.forEach(func => { %>
                <div class="row w-50 candidato justify-content-center mt-2 mx-auto border p-1 rounded bg-light" 
                onclick="candidatoModal('<%= func.CHAPA %>', '<%= func.NOME %>', '<%= func.SECAO %>', '<%= func.N_VOTACAO %>')">
                    <div class="col-sm-auto">
                        <img class="img-small " src='eu.jpg'  />
                    </div>
                    <div class="col-sm-8">
                        <ul class="list-group">
                            <li class="list-item-pd-0 ">Funcionario: <%= func.CHAPA %> <%= func.NOME  %> </li>
                            <li class="list-item-pd-0">Setor: <%= func.SECAO %> </li>
                            <li class="list-item-pd-0 ">Número de Votação: <text class="text-success fw-bold"><%= func.N_VOTACAO %></text></li>
                        </ul>
                    </div>
                </div>
                <% }) %> 
            <% } %> 
        </div>
        <div id="candidatoModal" class="voto-modal" >
            <div class="voto-modal-content">
                <div class="text-end ">
                    <span class="close" onclick="toggleModal()">&times;</span>
                </div>      
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-auto">
                            <img class="img-small " src='eu.jpg' />
                        </div>
                        <div class="col-sm-8">
                            <ul class="list-group">
                                <li class="list-item-pd-0" id="Func"></li>
                                <li class="list-item-pd-0" id="Secao"></li>
                                <li class="list-item-pd-0" >Número de Votação: <text class="text-success fw-bold" id="NVotacao"></text></li>
                            </ul>
                        </div>
                        <div class="text-end">
                            <form action="/" method="POST">
                                <button id="btnConfirmarVoto" name="nvotacao"  class="btn btn-success" type="submit" value=""> Confirmar Voto </button>
                            </form>
                            <button class="btn btn-danger" onclick="toggleModal()"> Cancelar </button>
                        </div>
                    </div>    
                </div>
              </div>
        </div>
    </section>
    <%- include('partials/footer'); %>
    <script src='js/votacao.js'></script>


</body>
</html>