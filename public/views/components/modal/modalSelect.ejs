<div id="modalSelect" class="voto-modal">
    <div class="custom-modal-content">
        <div class="position-relative">
            <span class="position-absolute end-0 close" onclick="toggleModal()">&times;</span>
        </div>
    <form id="selectForm" action="<%= locals.formURl %>" method="POST">
        <div class="container pt-5 text-center text-dark">
            <select id="selectOption" class="form-select text-center p-2" name="option" 
            aria-label="Selecione uma das opções" required>
                <option disabled selected value="">Selecione uma das opções</option>
                    <% if(locals.options) locals.options.forEach(option => { %>
                        <option value="<%= option.id %>">
                        <%= option.filial ? option.filial : option.login %>
                        </option>
                    <% }) %>
                </select>
            <div class="mt-3">
                <% if (locals.message) { %>
                    <p class="text-danger">
                        <%= message.error %>
                    </p>
                <% } %>
                <button class="btn btn-success" type="submit"> Confirmar </button>
            </form>
                <button class="btn btn-danger" onclick="toggleModal()"> Voltar </button>
            </div>
        </div>
    
    </div>
</div>